@model IEnumerable<WebApi.Models.Customer>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p >
    @Html.ActionLink("Create New", "Create","", new { @class = "btn btn-danger" })
</p> 
<table class="table table-hover table-bordered  bg-danger text-capitalize text-danger" >
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Cust_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cust_Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.E_mail)
